<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detallepokemon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallepokActivity">


    <ImageView
        android:id="@+id/ivPokemon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="36dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="76dp"
        android:background="#FF5722"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPokemon" />

    <TextView
        android:id="@+id/tvTipo1"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="56dp"
        android:background="#FA9E88"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvTipo2"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="#FA9E88"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="40dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <Button
        android:id="@+id/btnVerUbis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:backgroundTint="#752006"
        android:layout_marginTop="30dp"
        android:text="Ver Ubicaciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTipo1" />

    <Button
        android:id="@+id/btnAñadirUbi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="70dp"
        android:backgroundTint="#752006"
        android:text="Añadir Ubicacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVerUbis" />


</androidx.constraintlayout.widget.ConstraintLayout>